<%= form_for @pet, url: user_pet_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :species %>
    <%= f.text_field :species, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>: Seeking anything specific?  Anything special about the pet?
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Pet", class: 'btn btn-primary' %>
  </div>
<% end %>