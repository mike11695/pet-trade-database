<%= form_for @pet, url: user_pet_path, html: {id: 'pet_form'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :gender %>
    <%= f.select :gender, [['Male'], ['Female']], class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :level %>: Level and other stats are optional
    <%= f.number_field :level, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :hp %>
    <%= f.number_field :hp, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :strength %>
    <%= f.number_field :strength, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :defence %>
    <%= f.number_field :defence, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :movement %>
    <%= f.number_field :movement, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :uc %>
    <%= f.check_box :uc, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rw %>
    <%= f.check_box :rw, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rn %>
    <%= f.check_box :rn, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :uft %>
    <%= f.check_box :uft, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ufa %>
    <%= f.check_box :ufa, class: 'form-control' %>
  </div>
  <% if admin_signed_in? %>
  <div class="form-group">
    <%= f.label :verified %>
    <%= f.check_box :verified, class: 'form-control' %>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :description %>: Seeking anything specific?  Anything special about the pet?
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <br/>
  <div class="form-group">
    <%= f.submit "Update Pet", class: 'btn btn-primary', id: 'form-signup-btn' %>
  </div>
<% end %>