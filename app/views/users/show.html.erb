<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4 class="text-center"><%= @user.username %>'s Profile</h4>
      <div class="well text-center">
        <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
        <hr class="style-one"/>
        <h1><%= @user.profile.title %></h1>
        <h5><%= @user.profile.description %></h5>
        <% if current_user.id == @user.id %>
        <%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user.id) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
